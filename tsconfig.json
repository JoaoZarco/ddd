  "extends": "./node_modules/@node-ts/code-standards/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "allowUnreachableCode": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
